<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/bottomNavViewColor"
    android:orientation="vertical"
    tools:context=".ui.dialogs.ThemeBottomSheet">

    <TextView
        android:id="@+id/system_theme_textView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/system"
        android:gravity="center"
        android:textColor="@color/rvItemTitleColor"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/day_theme_textView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/day"
        android:gravity="center"
        android:textColor="@color/rvItemTitleColor"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/night_theme_textView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="@string/night"
        android:textColor="@color/rvItemTitleColor"
        android:textSize="18sp" />

</androidx.appcompat.widget.LinearLayoutCompat>